<Project>

    <Import Project="$([MSBuild]::GetPathOfFileAbove('Directory.Build.props', '$(MSBuildThisFileDirectory)../'))" />

    <PropertyGroup>
        <IsPackable>true</IsPackable>
        <Owners>Attribinter</Owners>
        <Authors>ErikWe</Authors>
        <PackageProjectUrl>https://github.com/Attribinter/Attribinter.Mappers.Collectors</PackageProjectUrl>
        <RepositoryUrl>https://github.com/Attribinter/Attribinter.Mappers.Collectors</RepositoryUrl>
        <GenerateDocumentationFile>true</GenerateDocumentationFile>
        <PackageReadmeFile>README.nupkg.md</PackageReadmeFile>
        <PackageIcon>Logo.png</PackageIcon>
        <PackageLicenseExpression>MIT</PackageLicenseExpression>
        <PackageRequireLicenseAcceptance>false</PackageRequireLicenseAcceptance>
        <NeutralLanguage>en</NeutralLanguage>
        <IncludeSymbols>true</IncludeSymbols>
        <SymbolPackageFormat>snupkg</SymbolPackageFormat>
    </PropertyGroup>

    <ItemGroup>
        <None Include="README.nupkg.md" Pack="true" PackagePath="\" />
        <None Include="$(PkgAttribinter_Logo)\Logo.png" Pack="true" PackagePath="\" Visible="false" />
    </ItemGroup>

    <ItemGroup>
        <PackageReference Include="Attribinter.Logo" PrivateAssets="all" GeneratePathProperty="true" />
    </ItemGroup>

</Project>